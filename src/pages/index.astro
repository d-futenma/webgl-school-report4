---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div data-webgl></div>
	<div class="modal-overlay" data-modal-overlay></div>
	<div class="modal" data-modal>
		<div class="modal-inner">
			<div class="modal-close-bg" data-modal-close></div>
			<button class="modal-close-btn modal-close" type="button" data-modal-close><span class="modal-close-btn-line"></span><span class="modal-close-btn-line"></span></button>
			<div class="modal-body">
				<div class="modal-img">
					<img src="assets/img/img-1.png" alt="" data-modal-img />
				</div>
			</div>
		</div>
	</div>
</Layout>

<style lang="stylus">
[data-webgl]
	position relative
	z-index 10

.modal-overlay, .modal
	backface-visibility hidden
	height 100%
	left 0
	opacity 0
	pointer-events none
	position fixed
	top 0
	transition opacity 0.5s, visibility 0.5s
	visibility hidden
	width 100%
	z-index 100

	.is-modal-opened&
		opacity 1
		pointer-events auto
		visibility visible

.modal-overlay
	background rgba(#000000, 0.8)

.modal
	box-sizing border-box
	overflow hidden
	overflow-y scroll
	-webkit-overflow-scrolling touch

.modal-inner
	align-items center
	box-sizing border-box
	display flex
	flex-direction column
	justify-content center
	margin 0 auto
	min-height 100%
	position relative
	z-index 100

.modal-close-bg
	height 100%
	left 0
	position absolute
	top 0
	width 100%

.modal-body
	background #ffffff
	margin 100px 0
	position relative
	vertical-align middle

	@media only screen and (min-width 768px)
		margin-left 10px
		margin-right 10px

.modal-close-btn
	backface-visibility hidden
	background none
	border 0
	border-radius 0
	cursor pointer
	display inline-block
	font-size 0
	height 35px
	outline none
	padding 0
	position absolute
	right 15px
	top 15px
	transform rotate(45deg)
	width 35px
	z-index 100

	@media only screen and (min-width 768px)
		height 70px
		right 30px
		top 30px
		width 70px

.modal-close-btn-line
	display inline-block
	left 0
	position absolute

	&::before
		backface-visibility hidden
		background #fff
		content ''
		display inline-block
		height 100%
		left 0
		position absolute
		top 0
		width 100%

	&:nth-child(1)
		height 2px
		left 0
		top 50%
		transform translateY(-50%) scaleX(1)
		transform-origin 0 50%
		width 100%

	&:nth-child(2)
		height 100%
		left 50%
		top 0
		transform translateX(-50%) scaleY(1)
		transform-origin 50% 0
		width 2px

.modal-img
	@media only screen and (min-width 768px)
		max-width 960px
</style>
